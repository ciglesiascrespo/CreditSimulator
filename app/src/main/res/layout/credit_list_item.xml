<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/idTxtCreditNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Credit name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idTxtLblEntidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/str_txt_lbl_entidad"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTxtCreditNameDetail" />

    <TextView
        android:id="@+id/idTxtEntidadDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/str_txt_lbl_entidad"
        app:layout_constraintBottom_toBottomOf="@+id/idTxtLblEntidad"
        app:layout_constraintStart_toEndOf="@+id/idTxtLblEntidad"
        app:layout_constraintTop_toTopOf="@+id/idTxtLblEntidad" />

    <TextView
        android:id="@+id/idTxtLblPlazo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/str_txt_lbl_plazo"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/idTxtEntidadDetail"
        app:layout_constraintStart_toEndOf="@+id/idTxtEntidadDetail"
        app:layout_constraintTop_toTopOf="@+id/idTxtEntidadDetail" />

    <TextView
        android:id="@+id/idTxtPlazoDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="48"
        app:layout_constraintBottom_toBottomOf="@+id/idTxtLblPlazo"
        app:layout_constraintStart_toEndOf="@+id/idTxtLblPlazo"
        app:layout_constraintTop_toTopOf="@+id/idTxtLblPlazo" />

    <TextView
        android:id="@+id/idTxtLblValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/str_txt_lbl_valor"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTxtLblEntidad" />

    <TextView
        android:id="@+id/idTxtValorDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1.200.000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/idTxtLblValor"
        app:layout_constraintStart_toEndOf="@+id/idTxtLblValor"
        app:layout_constraintTop_toTopOf="@+id/idTxtLblValor" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTxtLblValor" />

    <TextView
        android:id="@+id/idTxtLblTasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/str_txt_lbl_tasa"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/idTxtValorDetail"
        app:layout_constraintTop_toBottomOf="@+id/idTxtLblPlazo" />

    <TextView
        android:id="@+id/idTxtTasaDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/str_edt_tasa"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/idTxtLblTasa"
        app:layout_constraintTop_toTopOf="@+id/idTxtLblTasa" />

    <ImageView
        android:id="@+id/idImgEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_edit_black_1_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>